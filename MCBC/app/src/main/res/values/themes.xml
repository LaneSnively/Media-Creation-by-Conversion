<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediaCreationByConversion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/blackLight</item>
        <item name="android:enforceStatusBarContrast">true</item>
        <item name="android:colorBackground">@color/blackLight</item>
    </style>

    <style name="Theme.MediaCreationByConversion.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MediaCreationByConversion.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="Theme.MediaCreationByConversion.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/tealDark</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>